<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Application name from Spring -->
    <springProperty scope="context" name="APP_NAME"
                    source="spring.application.name"/>

    <!-- Startup timestamp (per run) -->
    <timestamp key="STARTUP_TIME" datePattern="yyyy-MM-dd_HH-mm-ss"/>

    <!-- Logs directory -->
    <property name="LOG_DIR" value="logs"/>

    <!-- Log pattern -->
    <property name="LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>

    <!-- Console -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- File: ONE FILE PER APPLICATION RUN -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">

        <!-- Per-run filename -->
        <file>${LOG_DIR}/${APP_NAME}-${STARTUP_TIME}.log</file>

        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>

        <!-- OPTIONAL: split by size ONLY (no time rolling) -->
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>
                ${LOG_DIR}/${APP_NAME}-${STARTUP_TIME}.%i.log
            </fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>10</maxIndex>
        </rollingPolicy>

        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>10MB</maxFileSize>
        </triggeringPolicy>

    </appender>

    <!-- Application logs -->
    <logger name="com.yp.ollama" level="DEBUG"/>

    <!-- Hibernate SQL (queries) -->
    <logger name="org.hibernate.SQL" level="DEBUG"/>

    <!-- Hibernate bind parameters (values) -->
    <logger name="org.hibernate.orm.jdbc.bind" level="TRACE"/>

    <!-- Hibernate DDL / schema generation -->
    <logger name="org.hibernate.tool.schema" level="DEBUG"/>

    <!-- Root -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>
